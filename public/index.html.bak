            // Check if sensor reading should trigger an alert
            function checkSensorAlert(reading) {
                const value = parseFloat(reading.value);
                if (isNaN(value)) return;

                let alertTriggered = false;
                let alertMessage = '';

                switch(reading.sensor_type) {
                    case 'temp':
                        if (value > 40 || value < -10) {
                            alertTriggered = true;
                            alertMessage = `Temperature alert: ${value}Â°C`;
                        }
                        break;
                    case 'hum':
                        if (value > 90 || value < 10) {
                            alertTriggered = true;
                            alertMessage = `Humidity alert: ${value}%`;
                        }
                        break;
                    case 'vibration':
                        if (value > 100) {
                            alertTriggered = true;
                            alertMessage = `Vibration alert: ${value} intensity`;
                        }
                        break;
                    case 'smoke':
                        if (value > 200) {
                            alertTriggered = true;
                            alertMessage = `Smoke alert: ${value} ppm`;
                        }
                        break;
                    case 'fire':
                        if (value > 0) {
                            alertTriggered = true;
                            alertMessage = `Fire detected!`;
                        }
                        break;
                }

                if (alertTriggered) {
                    // Show notification
                    showNotification(alertMessage, 'warning');
                }
            }

