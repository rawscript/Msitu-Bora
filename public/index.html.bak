            function createEventsTimelineChart(filteredEvents) {
                const ctx = document.getElementById('eventsTimelineChart').getContext('2d');
                
                // Create timeline data based on the selected time window
                let labels, data;
                
                if (currentTimeWindow === '24h') {
                    // Hourly data for 24 hours
                    labels = [];
                    data = [];
                    for (let i = 23; i >= 0; i--) {
                        const hour = new Date(Date.now() - i * 60 * 60 * 1000);
                        labels.push(`${hour.getHours()}:00`);
                        const hourStart = new Date(hour);
                        hourStart.setMinutes(0, 0, 0);
                        const hourEnd = new Date(hourStart);
                        hourEnd.setHours(hourEnd.getHours() + 1);
                        const count = filteredEvents.filter(e => {
                            const eventTime = new Date(e.detected_at);
                            return eventTime >= hourStart && eventTime < hourEnd;
                        }).length;
                        data.push(count);
                    }
                } else if (currentTimeWindow === '7d') {
                    // Daily data for 7 days
                    labels = [];
                    data = [];
                    for (let i = 6; i >= 0; i--) {
                        const date = new Date(Date.now() - i * 24 * 60 * 60 * 1000);
                        labels.push(date.toLocaleDateString('en-US', { weekday: 'short' }));
                        const dayStart = new Date(date);
                        dayStart.setHours(0, 0, 0, 0);
                        const dayEnd = new Date(dayStart);
                        dayEnd.setDate(dayEnd.getDate() + 1);
                        const count = filteredEvents.filter(e => {
                            const eventTime = new Date(e.detected_at);
                            return eventTime >= dayStart && eventTime < dayEnd;
                        }).length;
                        data.push(count);
                    }
                } else {
                    // For longer periods, show weekly data
                    labels = ['Week 1', 'Week 2', 'Week 3', 'Week 4'];
                    data = [0, 0, 0, 0];
                    
                    const periodStart = new Date();
                    if (currentTimeWindow === '30d') {
                        periodStart.setDate(periodStart.getDate() - 30);
                    } else if (currentTimeWindow === '1y') {
                        periodStart.setDate(periodStart.getDate() - 365);
                    }
                    
                    filteredEvents.forEach(event => {
                        const eventTime = new Date(event.detected_at);
                        const weeksAgo = Math.floor((new Date() - eventTime) / (7 * 24 * 60 * 60 * 1000));
                        if (weeksAgo >= 0 && weeksAgo < 4) {
                            data[3 - weeksAgo]++;
                        }
                    });
                }
                
                // Destroy existing chart if it exists
                if (window.eventsTimelineChart) {
                    window.eventsTimelineChart.destroy();
                }
                
                window.eventsTimelineChart = new Chart(ctx, {
                    type: 'line',
