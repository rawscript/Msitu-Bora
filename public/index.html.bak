            // Blockchain functions
            async function loadBlockchainData() {
                const container = document.getElementById('transactionsList');
                
                // Filter events with blockchain data
                const blockchainEvents = events.filter(event => event.blockchain_hash || event.blockchain_tx);
                
                if (blockchainEvents.length === 0) {
                    container.innerHTML = '<div class="loading"><p>No blockchain transactions found</p></div>';
                    return;
                }

                container.innerHTML = blockchainEvents.map(event => `
                    <div class="transaction-card">
                        <div class="transaction-header">
                            <div class="transaction-hash">${event.blockchain_hash ? event.blockchain_hash.substring(0, 32) + '...' : 'Pending...'}</div>
                            <div class="transaction-status ${event.blockchain_confirmed ? 'confirmed' : 'pending'}">
                                ${event.blockchain_confirmed ? 'Confirmed' : 'Pending'}
                            </div>
                        </div>
                        <div class="transaction-details">
                            <div class="detail-item">
                                <span class="detail-label">Event Type</span>
                                <span class="detail-value">${eventConfig[event.event_type]?.label || event.event_type}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Hub ID</span>
                                <span class="detail-value">${event.hub_id}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Severity</span>
                                <span class="detail-value">${event.severity}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Detected</span>
                                <span class="detail-value">${formatDateTime(event.detected_at)}</span>
                            </div>
                            ${event.blockchain_tx ? `
                            <div class="detail-item">
                                <span class="detail-label">TX Hash</span>
                                <span class="detail-value">${event.blockchain_tx.substring(0, 24)}...</span>
                            </div>
                            ` : ''}
                            ${event.blockchain_block ? `
                            <div class="detail-item">
                                <span class="detail-label">Block</span>
                                <span class="detail-value">${event.blockchain_block}</span>
                            </div>
                            ` : ''}
                        </div>
                    </div>
                `).join('');
            }

            // Show event detail panel
            function showEventDetail(eventId) {
                const event = events.find(e => e.id === eventId);
                if (!event) return;

                const config = eventConfig[event.event_type] || eventConfig.system;
                const panel = document.getElementById('detailPanel');
                
                panel.innerHTML = `
                    <div class="detail-header">
                        <button class="detail-close" id="closeDetailPanelBtn">Ã</button>
                        <h2>${config.label} Event</h2>
                        <div class="event-severity ${event.severity}">${event.severity}</div>
                    </div>
                    
                    <div class="detail-section">
                        <h3>Event Information</h3>
                        <div class="detail-grid">
                            <div class="detail-item">
                                <span class="detail-label">Hub ID</span>
                                <span class="detail-value">${event.hub_id}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Event Type</span>
                                <span class="detail-value">${config.label}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Detected</span>
                                <span class="detail-value">${formatDateTime(event.detected_at)}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Received</span>
                                <span class="detail-value">${formatDateTime(event.received_at)}</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="detail-section">
                        <h3>Location Data</h3>
                        <div class="detail-grid">
                            <div class="detail-item">
                                <span class="detail-label">Latitude</span>
                                <span class="detail-value">${event.latitude?.toFixed(6)}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Longitude</span>
                                <span class="detail-value">${event.longitude?.toFixed(6)}</span>
                            </div>
                        </div>
                    </div>
                    
                    ${event.sensor_data && Object.keys(event.sensor_data).length > 0 ? `
                    <div class="detail-section">
                        <h3>Sensor Readings</h3>
                        <div class="sensor-grid">
                            ${Object.entries(event.sensor_data).map(([key, value]) => `
                                <div class="sensor-item">
                                    <div class="sensor-value">${value}</div>
                                    <div class="sensor-unit">${key.toUpperCase()}</div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                    ` : ''}
                    
                    <div class="detail-section">
                        <h3>System Data</h3>
                        <div class="detail-grid">
                            ${event.ml_confidence ? `
                            <div class="detail-item">
                                <span class="detail-label">ML Confidence</span>
                                <span class="detail-value">${event.ml_confidence}%</span>
                            </div>
                            ` : ''}
                            <div class="detail-item">
                                <span class="detail-label">Battery Level</span>
                                <span class="detail-value">${event.battery_level}%</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Signal RSSI</span>
                                <span class="detail-value">${event.signal_rssi} dBm</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="detail-section">
                        <h3>Blockchain Verification</h3>
                        <div class="detail-grid">
                            <div class="detail-item">
                                <span class="detail-label">Status</span>
                                <span class="detail-value">${event.blockchain_confirmed ? 'Confirmed' : 'Pending'}</span>
                            </div>
                            ${event.blockchain_hash ? `
                            <div class="detail-item">
                                <span class="detail-label">Hash</span>
                                <span class="detail-value text-xs">${event.blockchain_hash.substring(0, 24)}...</span>
                            </div>
                            ` : ''}
                            ${event.blockchain_tx ? `
                            <div class="detail-item">
                                <span class="detail-label">Transaction</span>
                                <span class="detail-value text-xs">${event.blockchain_tx.substring(0, 24)}...</span>
                            </div>
                            ` : ''}
                        </div>
                    </div>
                `;
                
                panel.classList.add('show');
                
                // Add event listener for close button
                document.getElementById('closeDetailPanelBtn').addEventListener('click', closeDetailPanel);
            }

            function closeDetailPanel() {
                document.getElementById('detailPanel').classList.remove('show');
            }

            // Utility functions
            function formatTimeAgo(timestamp) {
                const seconds = Math.floor((new Date() - new Date(timestamp)) / 1000);
                if (seconds < 60) return 'Just now';
                if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
                if (seconds < 86400) return `${Math.floor(seconds / 3600)}h ago`;
                return `${Math.floor(seconds / 86400)}d ago`;
            }

            function formatDateTime(timestamp) {
                return new Date(timestamp).toLocaleString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
            }

            function resetView() {
                map.setView([0.35, 34.85], 12);
            }

            function locateHubs() {
                const searchTerm = document.getElementById('searchInput').value.trim();
                if (searchTerm) {
                    const coords = searchTerm.split(',').map(coord => parseFloat(coord.trim()));
                    if (coords.length === 2 && !isNaN(coords[0]) && !isNaN(coords[1])) {
                        map.setView([coords[0], coords[1]], 14);
                    } else {
                        const hubEvents = events.filter(event => 
                            event.hub_id.toLowerCase().includes(searchTerm.toLowerCase())
                        );
                        if (hubEvents.length > 0) {
                            const firstEvent = hubEvents[0];
                            map.setView([firstEvent.latitude, firstEvent.longitude], 14);
                        } else {
                            alert('Hub not found. Try searching by hub ID (e.g., KAK-01) or coordinates (lat,lng)');
                        }
                    }
                }
            }

            function showError(message) {
                const container = document.getElementById('eventList');
                container.innerHTML = `<div class="loading"><p>${message}</p></div>`;
            }

            // Event listeners
            function setupEventListeners() {
                // Event filter tabs
                document.querySelectorAll('.event-tab').forEach(tab => {
                    tab.addEventListener('click', function() {
                        document.querySelectorAll('.event-tab').forEach(t => t.classList.remove('active'));
                        this.classList.add('active');
                        currentFilter = this.dataset.filter;
                        renderEvents();
                    });
                });
                
                // Time window buttons
                document.querySelectorAll('.time-window-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        document.querySelectorAll('.time-window-btn').forEach(b => b.classList.remove('active'));
                        this.classList.add('active');
                        currentTimeWindow = this.dataset.window;
                        if (currentPage === 'analytics') {
                            loadAnalyticsData();
                        }
                    });
                });
                
                // Search input enter key
                document.getElementById('searchInput').addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        locateHubs();
                    }
                });
                
                // Map control buttons
                document.getElementById('resetViewBtn').addEventListener('click', resetView);
                document.getElementById('locateHubsBtn').addEventListener('click', locateHubs);
                
                // Detail panel close button
                // Note: This will be added dynamically when the panel is shown
            }

            // Initialize the application
            initialize();
        }
    </script>
</body>
</html>